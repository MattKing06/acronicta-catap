{
    "controls_information": {
        "pv_record_map": {
            "AWAK": {
                "type": "binary",
                "description": "Status of triggering on the BPM",
                "pv": "{{ awak_pv | default(name ~ ':AWAK') }}"
            },
            "RA1": {
                "type": "scalar",
                "description": "The readback for the attenuator 1 setting",
                "pv": "{{ ra1_pv | default(name ~ ':RA1') }}"
            },
            "RA2": {
                "type": "scalar",
                "description": "The readback for the attenuator 2 setting",
                "pv": "{{ ra2_pv | default(name ~ ':RA2') }}"
            },
            "RD1": {
                "type": "scalar",
                "description": "The readback for the delay 1 setting",
                "pv": "{{ rd1_pv | default(name ~ ':RD1') }}"
            },
            "RD2": {
                "type": "scalar",
                "description": "The readback for the delay 2 setting",
                "pv": "{{ rd2_pv | default(name ~ ':RD2') }}"
            },
            "RDY": {
                "type": "binary",
                "description": "Describes whether there is beam or not for the BPM",
                "pv": "{{ rdy_pv | default(name ~ ':RDY') }}"
            },
            "SA1": {
                "type": "scalar",
                "description": "The setter for attenuator 1",
                "pv": "{{ sa1_pv | default(name ~ ':SA1') }}"
            },
            "SA2": {
                "type": "scalar",
                "description": "The setter for attenuator 2",
                "pv": "{{ sa2_pv | default(name ~ ':SA2') }}"
            },
            "SD1": {
                "type": "scalar",
                "description": "The setter for delay 1",
                "pv": "{{ sd1_pv | default(name ~ ':SD1') }}"
            },
            "SD2": {
                "type": "scalar",
                "description": "The setter for delay 2",
                "pv": "{{ sd2_pv | default(name ~ ':SD2') }}"
            },
            "X": {
                "type": "statistical",
                "auto_buffer": false,
                "buffer_size": 10,
                "description": "readback for the beam x-position",
                "pv": "{{ x_pv | default(name ~ ':X') }}"
            },
            "Y": {
                "type": "statistical",
                "auto_buffer": false,
                "buffer_size": 10,
                "description": "readback for the beam y-position",
                "pv": "{{ y_pv | default(name ~ ':Y') }}"
            }
        }
    },
    "properties": {
        "name": "{{ name }}",
        "name_alias": "{{ name_alias }}",
        "position": {{ position }},
        "bpm_type": "{{ bpm_type }}",
        "hardware_type": "BPM",
        "machine_area": "{{ machine_area }}"{% if att1cal is defined %},
        "att1cal": {{ att1cal }}{% endif %}{% if att2cal is defined %},
        "att2cal": {{ att2cal }}{% endif %}{% if bpm_set_max_wait_time is defined %},
        "bpm_set_max_wait_time": {{ bpm_set_max_wait_time }}{% endif %}{% if mn is defined %},
        "mn": {{ mn }}{% endif %}{% if qcal is defined %},
        "qcal": {{ qcal }}{% endif %}{% if v1cal is defined %},
        "v1cal": {{ v1cal }}{% endif %}{% if v2cal is defined %},
        "v2cal": {{ v2cal }}{% endif %}{% if virtual_name is defined %},
        "virtual_name": "{{ virtual_name }}"{% endif %}{% if xn is defined %},
        "xn": {{ xn }}{% endif %}{% if yn is defined %},
        "yn": {{ yn }}{% endif %}
    }
}