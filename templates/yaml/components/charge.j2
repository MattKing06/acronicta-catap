{
    "controls_information": {
        "pv_record_map": {
            "Q": {
                "type": "statistical",
                "auto_buffer": false,
                "buffer_size": 10,
                "description": "Bunch charge",
                "pv": "{{ q_pv | default(name ~ ':Q') }}"
            },
            "DQ": {
                "type": "statistical",
                "auto_buffer": false,
                "buffer_size": 10,
                "description": "Dark current",
                "pv": "{{ dq_pv | default(name ~ ':DQ') }}"
            }
        }
    },
    "properties": {
        "type": "{{ type }}",
        "hardware_type": "Charge",
        "machine_area": "{{ machine_area }}",
        "name": "{{ name }}",
        "virtual_name": "{% if virtual_name is defined %}{{ virtual_name }}{% else %}VM-{{ name }}{% endif %}",
        "name_alias": "{{ name_alias }}",
        "position": {{ position }}
    }
}